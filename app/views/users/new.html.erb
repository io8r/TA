<% provide(:title, "Sign up") %>

<li><%= link_to "Home", root_path %></li>
<li><%= link_to "Help", help_path %></li>

<h1>Sign up</h1>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(@user, url: signup_path) do |f| %>
			<%= render 'shared/error_messages' %>
			
				<li><%= f.label :name %></li>
				<li><%= f.text_field :name, class: 'form_control' %></li>

				<li><%= f.label :password %></li>
				<li><%= f.password_field :password, class: 'form_control' %></li>

				<li><%= f.label :password_confirmation, "Confirmation" %></li>
				<li><%= f.password_field :password_confirmation, class: 'form_control' %></li>

				<li><%= f.submit "Create account", class: "btn btn-primary" %></li>

			<% end %>

		</div>
	</div>